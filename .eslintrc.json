{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "CodeMirror": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "camelcase": "error",
    "comma-dangle": ["error", "never"],
    "comma-spacing": ["error", {
      "after": true,
      "before": false
    }],
    "comma-style": "error",
    "curly": "error",
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "no-unused-private-class-members": "error",
    "no-var": "error",
    "one-var": ["error", "never"],
    "prefer-const": "error",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "sort-imports": ["error", {
      "ignoreCase": false,
      "ignoreMemberSort": false,
      "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
    }],
    "@typescript-eslint/no-empty-interface": "off",
    "@typescript-eslint/no-unused-vars": ["error", {
        "argsIgnorePattern": "^_"
    }]
  }
}
